<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF3FF"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.OOD.malissa.shoopingcart.Activities.AddProduct">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                android:focusable="true"
                android:text="Enter Product Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#164983"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="78dp"
                android:width="200dp"
                android:gravity="center"
                android:hint="Name"
                android:textColor="#6E7172" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addName"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="528dp"
                android:text="Enter Product Description"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#164983"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addDeets"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="578dp"
                android:width="200dp"
                android:gravity="center"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textColor="#6E7172" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addDeets"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="128dp"
                android:paddingTop="10dp"
                android:text="Enter Product Type"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#164983"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="178dp"
                android:width="200dp"
                android:gravity="center"
                android:hint="Type"
                android:textColor="#6E7172" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addType"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="228dp"
                android:text="Enter Quantity Amount"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#164983"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addquant"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="278dp"
                android:width="200dp"
                android:ems="10"
                android:gravity="center"
                android:hint="quantity"
                android:inputType="numberSigned"
                android:textColor="#6E7172" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addquant"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="428dp"
                android:text="Enter Invoice Price"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#164983"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addcost"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="478dp"
                android:width="200dp"
                android:ems="10"
                android:gravity="center"
                android:hint="cost"
                android:inputType="numberDecimal"
                android:textColor="#6E7172" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addcost"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="328dp"
                android:text="Enter Selling Price"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#164983"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addprice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="378dp"
                android:width="200dp"
                android:ems="10"
                android:gravity="center"
                android:hint="cost"
                android:inputType="numberDecimal"
                android:textColor="#6E7172" />


        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/addProdBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:width="175dp"
        android:background="#4D74A3"
        android:text="Add Product"
        android:textColor="#fff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addCancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:width="175dp"
        android:background="#F8FAFD"
        android:text="Cancel"
        android:textColor="#808495" />


</RelativeLayout>
